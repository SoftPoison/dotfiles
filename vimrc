set number
set linebreak
set showbreak=+++
set textwidth=200
set showmatch

set hlsearch
set smartcase
set ignorecase
set incsearch

filetype plugin indent on
set tabstop=4
set shiftwidth=4
set expandtab

set ruler

set undolevels=1000
set backspace=indent,eol,start

filetype plugin on
set omnifunc=syntaxcomplete#Complete

syntax on

set mouse=
